---
// import { ArticleContent } from "@/components/01-atoms/ArticleContent";
import BaseHTML from '@/components/01-atoms/BaseHTML.astro'
import BigSection from '@/components/02-molecules/texts/BigSection.astro'
import BaseHead from '@/components/BaseHead.astro'
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
---

<BaseHTML>
  <head>
    <BaseHead title='Achmad Kurnianto - Experiences' />
  </head>
  <body>
    <Header />
    <main class='container mx-auto mt-20'>
      <BigSection
        title='Experiences'
        description='My work experiences over the years.'
        viewTransitionName='my-experiences'
      />
      <ul
        class='timeline timeline-snap-icon max-md:timeline-compact timeline-vertical mx-4 lg:mx-0'
      >
        <li>
          <div class='timeline-middle'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              viewBox='0 0 20 20'
              fill='currentColor'
              class='h-8 w-8 text-primary'
            >
              <path
                fill-rule='evenodd'
                d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z'
                clip-rule='evenodd'></path>
            </svg>
          </div>
          <div class='timeline-start !mb-10 md:text-end'>
            <time class='italic'>January 2023 - Present</time>
            <div class='text-lg font-bold text-primary'>
              Software Engineer at Pendar
            </div>
          </div>
          <hr />
        </li>
        <li>
          <hr />
          <div class='timeline-middle'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              viewBox='0 0 20 20'
              fill='currentColor'
              class='h-8 w-8 text-primary'
            >
              <path
                fill-rule='evenodd'
                d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z'
                clip-rule='evenodd'></path>
            </svg>
          </div>
          <div class='timeline-end mb-10'>
            <time class='text-lg font-mono italic'
              >February 2018 - December 2022</time
            >
            <div class='text-lg font-bold text-primary'>
              Software Engineer at ProcurA
            </div>
          </div>
          <hr />
        </li>
        <li>
          <hr />
          <div class='timeline-middle'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              viewBox='0 0 20 20'
              fill='currentColor'
              class='h-8 w-8 text-primary'
            >
              <path
                fill-rule='evenodd'
                d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z'
                clip-rule='evenodd'></path>
            </svg>
          </div>
          <div class='timeline-start md:text-end'>
            <time class='text-lg font-mono italic'
              >March 2016 - January 2018</time
            >
            <div class='text-lg font-bold text-primary'>
              Hybrid Mobile Developer at Vhiweb
            </div>
          </div>
          <hr />
        </li>
      </ul>
    </main>
    <Footer />
  </body>
</BaseHTML>
