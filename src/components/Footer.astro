---
const initialYearCreated = 2023
const today = new Date()

const websiteCreated =
  initialYearCreated === today.getFullYear()
    ? `${initialYearCreated}`
    : `${initialYearCreated} - ${today.getFullYear()}`

interface Props {
  hasPadding?: boolean
  withCopyright?: boolean
  withPrimaryIconColor?: boolean
}

const {
  hasPadding = true,
  withCopyright = true,
  withPrimaryIconColor = false
} = Astro.props
---

<footer class:list={[{ 'has-padding': hasPadding }]}>
  {
    withCopyright && (
      <span>{`@ ${websiteCreated} Achmad Kurnianto. All rights reserved.`}</span>
    )
  }
  <div class='social-links'>
    <a href='https://x.com/AchmadkDev' target='_blank' rel='noopener'>
      <span class='sr-only'>Follow Achmad Kurnianto on X (Twitter)</span>
      <svg
        astro-icon='social/x'
        width='32'
        height='32'
        viewBox='0 0 24 24'
        style='enable-background:new 0 0 24 24;'
        class:list={[{ primary: withPrimaryIconColor }]}
        ><path
          d='M14.095479,10.316482L22.286354,1h-1.940718l-7.115352,8.087682L7.551414,1H1l8.589488,12.231093L1,23h1.940717  l7.509372-8.542861L16.448587,23H23L14.095479,10.316482z M11.436522,13.338465l-0.871624-1.218704l-6.924311-9.68815h2.981339  l5.58978,7.82155l0.867949,1.218704l7.26506,10.166271h-2.981339L11.436522,13.338465z'
        ></path></svg
      >
    </a>
    <a href='https://github.com/achmadk' target='_blank' rel='noopener'>
      <span class='sr-only'>Go to Achmad Kurnianto's GitHub Profile</span>
      <svg
        viewBox='0 0 16 16'
        aria-hidden='true'
        width='32'
        height='32'
        astro-icon='social/github'
        class:list={[{ primary: withPrimaryIconColor }]}
        ><path
          d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z'
        ></path></svg
      >
    </a>
  </div>
</footer>
<style>
  footer {
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
  }
  footer.has-padding {
    padding: 2em 1em 6em 1em;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
  }
  .social-links a:hover {
    color: rgb(var(--gray-dark));
  }

  svg path {
    fill: currentColor;
  }

  html[data-theme='light'] svg.primary path {
    fill: #cf4536;
  }

  svg.primary path {
    fill: #ffbc27;
  }
</style>
